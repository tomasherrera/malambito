<div class="comment" id="comment_<%= anonymous_comment.id%>">
    <div class="inner-comment">
      <p>
        <b>" </b>
        <%= anonymous_comment.body %><b>"</b>
      </p>
      <p class="comment-author">
        <i><b>By</b>
        <%= anonymous_comment.commenter %></i>
        <% if user_signed_in? %>
        <%= render :partial => "likes/like_button", :locals => {:comment => anonymous_comment}%>  
        <%end%>
      </p> 
        
    </div>    
</div>